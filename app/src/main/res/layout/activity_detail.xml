<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohamedsallam.inventoryapp.DetailActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/group_message_and_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyleInListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_name" />

            <TextView
                android:id="@+id/name_detail"
                style="@style/FigureStyleInListView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height_list_item" />

            <TextView
                style="@style/TextStyleInListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_price" />

            <TextView
                android:id="@+id/price_detail"
                style="@style/FigureStyleInListView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height_list_item" />

            <TextView
                style="@style/TextStyleInListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_current_quantity" />

            <TextView
                android:id="@+id/current_quantity_detail"
                style="@style/FigureStyleInListView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height_list_item" />

            <TextView
                style="@style/TextStyleInListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_sale_quantity" />

            <TextView
                android:id="@+id/sale_quantity_detail"
                style="@style/FigureStyleInListView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height_list_item" />

            <TextView
                style="@style/TextStyleInListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_quantity_modify" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_subtract"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_subtract" />

                <Button
                    android:id="@+id/button_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_add" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_product"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        style="@style/FigureStyleInListView"
        android:layout_below="@id/group_message_and_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="@string/explanation_modify_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_order" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_delete" />
    </LinearLayout>

</RelativeLayout>